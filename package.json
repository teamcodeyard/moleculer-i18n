{
  "name": "moleculer-i18n",
  "version": "0.0.1",
  "packageManager": "pnpm@8.2.0",
  "description": "I18n package for Moleculer framework",
  "author": "iujlaki",
  "license": "MIT",
  "homepage": "https://github.com/teamcodeyard/moleculer-i18n#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teamcodeyard/moleculer-i18n.git"
  },
  "bugs": {
    "url": "https://github.com/teamcodeyard/moleculer-i18n/issues"
  },
  "keywords": [
    "moleculer",
    "nodejs",
    "microservice",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "tsup",
    "coverage": "vitest --coverage",
    "dev": "npx tsx watch ./src/index.ts",
    "lint:fix": "eslint --fix .",
    "lint": "eslint --cache .",
    "release": "npx bumpp && npm publish",
    "prepublishOnly": "npm build",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "moleculer": "^0.14.29",
    "node-polyglot": "^2.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/node-polyglot": "^2.4.2",
    "@vitest/coverage-c8": "^0.30.1",
    "eslint": "^8.38.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  }
}
